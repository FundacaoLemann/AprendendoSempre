<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="10dp" />
            <stroke
                android:width="1.0dp"
                android:color="@color/button_disabled_color" />
            <padding
                android:bottom="10dp"
                android:left="7dp"
                android:right="7dp"
                android:top="10dp" />
            <solid android:color="@color/zxing_transparent" />
        </shape>
    </item>

    <item android:state_enabled="true" android:state_focused="false" android:state_pressed="false">
        <shape>
            <corners android:radius="10dp" />
            <stroke
                android:width="1.0dp"
                android:color="@color/button_default_color" />
            <padding
                android:bottom="10dp"
                android:left="7dp"
                android:right="7dp"
                android:top="10dp" />
            <solid android:color="@color/zxing_transparent" />
        </shape>
    </item>

    <item android:state_focused="false" android:state_pressed="true">
        <shape>
            <corners android:radius="10dp" />
            <stroke
                android:width="1.0dp"
                android:color="@color/color" />
            <padding
                android:bottom="10dp"
                android:left="7dp"
                android:right="7dp"
                android:top="10dp" />
            <solid android:color="@color/color" />
        </shape>
    </item>
</selector>