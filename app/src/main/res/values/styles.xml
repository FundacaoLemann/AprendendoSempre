<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="WebView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color</item>
        <item name="colorPrimaryDark">@color/color</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">?colorPrimary</item>
    </style>

    <style name="MainActivity" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/color2</item>
        <item name="colorOnPrimary">@color/color</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/color2</item>
        <item name="colorOnPrimary">@color/color</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="Button">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textColor">@color/color3</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:background">@drawable/button_secondary_selector</item>
        <item name="android:textColor">@color/color3</item>

    </style>

    <style name="Menu" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:textColorPrimaryDisableOnly">@color/color3</item>
        <item name="android:textColorPrimary">@color/color2</item>
    </style>

    <style name="Theme.App" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>
        <item name="colorPrimary">@color/color</item>
        <item name="colorOnPrimary">@color/color2</item>
    </style>
</resources>
